@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h2>Wallet</h2>
    <p>Create the transaction below:</p>
    <form asp-controller="Home" asp-action="Wallet" method="post">
        <div class="form-group">
            <label for="privkey">Private key:</label>
            <textarea class="form-control" rows="5" id="privkey"></textarea>
        </div>
        <div class="form-group">
            <label for="addr">Address:</label>
            <input type="text" class="form-control" id="addr">
        </div>
        
        <div class="form-group">
            <ul class="list-group" id="vouts">
                <li class="list-group-item" id="listi1">                    
                    <div>
                        <button type="button" class="btn btn-danger" onclick="delListItem(1)">X</button>
                        <label for="toaddr1">To Address:</label>
                        <input type="text" class="form-control" id="toaddr1">
                        <label for="ammount1">Ammount:</label>
                        <input type="number" class="form-control" id="ammount1">
                    </div>
                </li>
            </ul>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success" id="sender">Send Transaction</button>
        </div>
    </form>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/node-forge@0.7.0/dist/forge.min.js"></script>
    <script src="~/js/transmaker.js"></script>
}