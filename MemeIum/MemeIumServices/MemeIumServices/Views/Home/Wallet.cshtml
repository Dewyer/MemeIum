@model MemeIumServices.ViewModels.WalletViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h2>Wallet</h2>
    <p>Create the transaction below:</p>
    <form asp-controller="Home" asp-action="Send" method="post">
        @await Component.InvokeAsync("WalletInfo",Model.User)
        <div class="form-group">
            <label for="msg">Message:</label>
            <input type="text" class="form-control" id="msg" name="msg">
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-success" id="adder" onclick="window.dick()">Add Output</button>
            <ul class="list-group" id="vouts">
                <li class="list-group-item" id="listi1">
                    <div>
                        <button type="button" class="btn btn-danger" onclick="delListItem(1)">X</button>
                        <label for="toaddr1">To Address:</label>
                        <input type="text" class="form-control" id="toaddr1" name="toaddr1">
                        <label for="ammount1">Amount:</label>
                        <input type="number" class="form-control" id="ammount1" name="ammount1">
                    </div>
                </li>
            </ul>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success" id="sender">Send Transaction</button>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/js/transmaker.js"></script>
}