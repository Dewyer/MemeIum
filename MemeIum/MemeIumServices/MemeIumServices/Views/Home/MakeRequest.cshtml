@model MemeIumServices.ViewModels.ActiveUserViewModel
@{
    ViewData["Title"] = "Make request";
}

<div class="container">
    <h3>Request Payment</h3>
    <p>Create the transaction request below: </p>
    <form asp-controller="Home" asp-action="DoMakeRequest" method="post">
        @await Component.InvokeAsync("WalletInfo", Model.User)
        <div class="form-group">
            <label for="msgp">Personal Message:</label>
            <input type="text" class="form-control" id="msgp" name="msgp" value="Hello felow memer!">
        </div>
        <div class="form-group">
            <label for="msgt">Transaction Message:</label>
            <input type="text" class="form-control" id="msgt" name="msgt" value="This will be saved to the blockchain.">
        </div>
        <div class="form-group">
            <label for="amm">Amount :</label>
            <input type="number" min="0" step="0.00001" class="form-control" id="amm" name="amm" value="0">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success" id="sender">Make Request</button>
        </div>
    </form>
</div>
